
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/thanh-toan" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Tất cả
            </NavLink>
        </li>
        @if (categories is not null)
        {
            foreach (var item in categories)
            {
                <li class="nav-item px-3">
                    <NavLink class="nav-link" Match="NavLinkMatch.All" @onclick="() => HandleProductByCategory(item)">
                        <span class="oi oi-cart" aria-hidden="true"></span> @item.Type
                    </NavLink>
                </li>
            }
        }
    </ul>
</div>


