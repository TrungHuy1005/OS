@attribute [Route(Routes.Payment)];

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="customer-info">
                    <div class="col-12 payment-infomation justify-content-left" style="user-select:auto; font-size: 40px;">
                        <h3>THÔNG TIN KHÁCH HÀNG</h3>

                    </div>
                    <div class="col-12 payment-editname">
                        <input required="" type="text" value="" name="username" id="customer_name" placeholder="Name" class="text" style="user-select: auto;">

                    </div>
                    <div class="col-12 payment-editphone">
                        <input required="" type="text" value="" name="phone" id="customer_phone" placeholder="Phone number" class="text" style="user-select: auto;">

                    </div>
                </div>

                <div class="method">
                    <div class="col-12 payment-method justify-content-left">
                        <h3>HÌNH THỨC THANH TOÁN</h3>
                    </div>
                    <div class="col-12 payment-method__choose">
                        <div class="payment-method__choose__btn">
                            <input type="radio"> Thanh toán bằng tiền mặt
                        </div>
                    </div>
                    <div class="col-12 payment-method__choose">
                        <div class="payment-method__choose__btn">
                            <input type="radio"> Thanh toán bằng Ví MoMo
                        </div>
                    </div>
                    <div class="col-12 payment-codescan">
                        <img class="payment-codescan__qr" src="../../public/img/mavach.jpg" alt="">
                    </div>
                </div>


            </div>
            <!-- left page -->
            <div class="col-12 col-md-8">
                <div class="invoice">
                    <h2 class="mb-3" style="user-select: auto;">HÓA ĐƠN</h2>
                    @if (carts is not null)
                    {
                        foreach (var item in carts)
                        {
                            <div class="payment-bill d-flex align-items-center justify-content-between " style="user-select: auto;">
                                <p class="me-3 mb-2" style="user-select: auto;">@products.Where(t => t.Id == item.ProductId).FirstOrDefault().Name</p>
                                <p class="fw-medium" style="user-select: auto;">@products.Where(t => t.Id == item.ProductId).FirstOrDefault().Price x @item.Quantity</p>
                            </div>
                        }
                    }
                    <div class="payment-checkout d-flex align-items-bottom justify-content-between ">
                        <p class="fs-24 fw-medium text-left" style="user-select: auto;">TỔNG: @bills[bills.Count-1].Total</p>
                        <a class="btn btn-dark" style="user-select: auto;" @onclick="SendMail">THANH TOÁN</a>
                    </div>


                </div>

            </div>

        </div>
</div>